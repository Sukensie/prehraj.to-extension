{
  "name": "Přehraj.to autoplay",
  "version": "1.0.1",
  "description": "Automatické spouštění dalších dílů na přehraj.to --dev",
  "manifest_version": 3,
  "author": "Tomáš Souček",
  "action":{
    "default_popup": "index.html",
    "default_title": "Přehraj.to autoplay"
  },
  "permissions": [
    "tabs", "storage"
  ],
  "content_scripts" : [
      {
          "matches": ["https://prehraj.to/*"],
          "js": ["script.js"],
          "css": ["button.css"],
          "run_at": "document_idle"
      },
      {
        "matches": ["https://prehraj.to/*?plugin=1&query=1"],
        "js": ["script1.js"],
        "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}